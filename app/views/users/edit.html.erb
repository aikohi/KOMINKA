<section class="userinfo text-center">
  <div class="info-panel">
	　<h2>会員情報変更</h2>
 		<%= form_for(@user) do |f| %>
		　<div class="namelabel">
       	 	<label for="name">名前変更</label>
        	<%= f.text_field :name, class: "name", autofocus: true %>
   		  </div>

    	<div class="imagelabel">
    		<%= attachment_image_tag @user, :profile_image, size:'100x100',fallback: "no_image.png" %>
     		<label class="control-label sr-only">プロフィール画像変更</label>
    		<%= f.attachment_field :profile_image, class: "user_image", placeholder: "ファイルを選択" %>
    	</div><br>

    	<div class="introductionlabel">
        <% if @user.errors.any? %>
          <div id="error_explanation">
              <ul>
                <% @user.errors.full_messages.each do |message| %>
                 <li>Error！！<%= message %></li>
                <% end %>
              </ul>
          </div>
        <% end %>
      </div>
         <%= f.submit "情報を変更する",class: "btn btn-outline-secondary active" %>
		<% end %>
  </div>
  <%= link_to "退会する" ,user_registration_path(id: current_user.id), method: :delete, "data-confirm" => "退会しますか？", class: "btn btn-danger" %>
</section>
<!---ユーザーの投稿一覧-->
<div class="user-post">
  <div class="imagelabel text-center">
      <%= attachment_image_tag @user, :profile_image, size:'100x100',fallback: "no_image.png" %>
      <h3><%= @user.name %>さん</h3><%= link_to "プロフィール変更", edit_user_path(current_user),class: "btn btn-primary" %>
  </div>
  <div class="shop-index">
    <h3 class="column-title">宣伝中のカフェ</h3>
    <div class="shops">
      <div class="container">
        <div class="row">
            <% @shops.each do |shop| %>
              <div class="col-lg-4 md-4"style="margin-bottom:50px;">
                 <div class="card">
                  <%= attachment_image_tag shop, :shop_image, size:'100x250',fallback: "no_image.png",class: "card-img-top" %>
                    <div class="card-body">
                     <p class="card-address"><i class="fas fa-map-marker-alt"></i><%= shop.address %></p>
                      <h5 class="card-title"><%= link_to shop_path(shop.id) do %><%= shop.shop_name %></h5>
                      <% end %>
                        <% if  current_user %>
                          <%= link_to "編集",edit_shop_path(shop.id), class: "btn btn-outline-success" %>
                          <%= link_to "削除", shop_path(shop.id), class: "btn btn-outline-danger", method: :delete, "data-confirm" => "本当に削除してよろしいのですか?" %>
                      <% end %>
                    </div>
                </div>
              </div>
            <% end %>
        </div>
      </div>
    </div>
  </div>
</div>